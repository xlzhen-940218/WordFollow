<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <corners android:radius="8dp" />
            <solid  /> <!-- 按下状态颜色 -->
            <stroke
                android:width="1dp"
                android:color="#66000000" /> <!-- 边框颜色 -->
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="8dp" />
            <solid /> <!-- 正常状态颜色 -->
            <stroke
                android:width="1dp"
                android:color="#33000000" /> <!-- 边框颜色 -->
        </shape>
    </item>
</selector>